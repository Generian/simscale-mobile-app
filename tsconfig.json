{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
		"moduleResolution": "node",
        "jsx": "react",
        "typeRoots": [ 
            "./typings", 
            "./node_modules/@types"
        ]
    },
    "include": [
        // "./src/**/*", "webpack.config.js"
        "src/index.tsx"
    ],
    "exclude": [
        "./node_modules",
        "./typings"
    ]
}